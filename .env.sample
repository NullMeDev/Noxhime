# Noxhime Bot Configuration
# ========================

# === Discord Bot Core Settings ===
# Discord Bot Token (required)
DISCORD_TOKEN=your_discord_token_here
# Discord Client ID
CLIENT_ID=your_discord_client_id_here
# Command Prefix
COMMAND_PREFIX=!
# Notification Channel ID for system alerts
NOTIFY_CHANNEL_ID=your_notification_channel_id
# Database Path (relative or absolute)
DATABASE_PATH=./data/noxhime.db

# AI Integration has been removed

# === Monitoring and System Health (Phase 2) ===
# Enable monitoring server
MONIT_ENABLED=true
# Monitoring server port
MONIT_PORT=5000
# Path for PID file (for monitoring services)
PID_FILE_PATH=/home/null/projects/Noxhime/noxhime.pid
# Enable self-healing functionality
SELF_HEALING_ENABLED=true
# System stats collection interval in milliseconds (default: 1 hour)
SYSTEM_STATS_INTERVAL=3600000

# === Sentinel Intelligence (Phase 4) ===
# Enable Sentinel monitoring system
SENTINEL_ENABLED=true
# Sentinel check interval in milliseconds (default: 1 minute)
SENTINEL_CHECK_INTERVAL=60000
# Enable automatic backups
RCLONE_BACKUP_ENABLED=true
# Remote destination for backups
RCLONE_REMOTE=gdrive:NoxhimeBackups
# Backup schedule (cron format - default: daily at midnight)
RCLONE_SCHEDULE=0 0 * * *

# === Personality Core (Phase 5) ===
# Enable personality system
PERSONALITY_ENABLED=true
# Default mood state
DEFAULT_MOOD=focused

# BioLock security system has been removed

# === Web Dashboard (Phase 7) ===
# Enable API server for web dashboard
API_ENABLED=true
# API server port
API_PORT=3000
# API keys for internal communication (comma-separated)
API_KEYS=noxhime_api_key_1,noxhime_api_key_2,noxhime_api_key_3
# JWT secret for web authentication (generate a strong random value)
JWT_SECRET=6629d4f548a64775f9e3de96f32b52a0f4ccab404944bff3b8a36f9b33469acc
# Dashboard URL (default uses localhost with API_PORT)
DASHBOARD_URL=http://localhost:3000
