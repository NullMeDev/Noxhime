# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here
# OWNER_ID removed - bot is now open for all users
NOTIFY_CHANNEL_ID=your_discord_channel_id_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Bot Settings
DATABASE_PATH=./data/noxhime.db
COMMAND_PREFIX=!

# Security Settings - DISABLED (bot is now open for all users)
# BIOLOCK_ENABLED=false
# BIOLOCK_PASSPHRASE and BIOLOCK_OVERRIDE_KEY are no longer used

# Monitoring and System Health (Phase 2)
MONIT_ENABLED=true
MONIT_PORT=5000
PID_FILE_PATH=/home/nulladmin/noxhime-bot/noxhime.pid
SELF_HEALING_ENABLED=true
SYSTEM_STATS_INTERVAL=3600000  # Reporting interval in milliseconds (default: 1 hour)

# Sentinel Intelligence (Phase 4)
SENTINEL_ENABLED=true
SENTINEL_CHECK_INTERVAL=60000  # Check interval in milliseconds (default: 1 minute)
RCLONE_BACKUP_ENABLED=true
RCLONE_REMOTE=gdrive:NoxhimeBackups
RCLONE_SCHEDULE=0 0 * * *  # Daily at midnight (cron format)

# Personality Core (Phase 5)
PERSONALITY_ENABLED=true
DEFAULT_MOOD=focused
SYSTEM_STATS_INTERVAL=3600000  # Interval in ms (1 hour)

# Web Integration API - OPEN ACCESS (no authentication required)
API_ENABLED=true
API_PORT=3000
# API_KEYS removed - API is now open for all users
