  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc && npm run build:web",
    "monitor": "node dist/monitor-cli.js",
    "build:web": "npx tailwindcss -i ./web/src/styles.css -o ./web/public/styles.css",
