{
  "name": "noxhime-status-dashboard",
  "version": "1.0.0",
  "description": "Status dashboard for Noxhime services",
  "main": "public/index.js",
  "engines": {
    "node": ">=18.0.0 <21.0.0"
  },
  "scripts": {
    "dev": "wrangler pages dev --local --compatibility-date=2025-06-01",
    "build": "npx tailwindcss -i ./src/styles/input.css -o ./public/styles.css && cp -r src/* public/",
    "deploy": "npm run build && wrangler pages publish public",
    "start": "wrangler pages dev public --compatibility-date=2025-06-01",
    "tailwind:watch": "npx tailwindcss -i ./src/styles/input.css -o ./public/styles.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "status",
    "dashboard",
    "cloudflare",
    "pages"
  ],
  "author": "NullMeDev",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240525.0",
    "@types/node": "^18.18.0",
    "concurrently": "^8.2.2", 
    "tailwindcss": "^3.3.2",
    "typescript": "^5.3.3",
    "wrangler": "^4.18.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.1",
    "socket.io": "^4.7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NullMeDev/noxhime-status.git"
  },
  "homepage": "https://status.noxhime.com"
}
